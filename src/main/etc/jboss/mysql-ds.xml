<?xml version="1.0" encoding="UTF-8"?>

<datasources>
    <local-tx-datasource>
        <jndi-name>activiti5.ds</jndi-name>
        <connection-url>jdbc:mysql://localhost:3306/activiti5_development</connection-url>
        <driver-class>com.mysql.jdbc.Driver</driver-class>
        <user-name>activiti5</user-name>
        <password>activiti5</password>
        <use-java-context>ture</use-java-context>
        <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLExceptionSorter</exception-sorter-class-name>
        <valid-connection-checker-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLValidConnectionChecker</valid-connection-checker-class-name>
        <new-connection-sql>select 1</new-connection-sql>
        <check-valid-connection-sql>select 1</check-valid-connection-sql>
        <metadata>
            <type-mapping>mySQL</type-mapping>
        </metadata>
    </local-tx-datasource>
</datasources>

