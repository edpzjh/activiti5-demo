	  <artifactId>struts2-junit-plugin</artifactId>
	  <scope>test</scope>
	  <exclusions>
	  	 <exclusion>
	  	 	<groupId>org.springframework</groupId>
	   		<artifactId>spring-test</artifactId>
	  	 </exclusion>
